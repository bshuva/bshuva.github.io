    flex-direction: row;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    align-items: center;
    gap: 1rem;

    & a {
      text-decoration: none;
      color: inherit;
    }
  }
</style>
