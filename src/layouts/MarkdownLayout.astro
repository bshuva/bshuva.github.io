---
import "../styles/gh-markdown.css";
import BaseLayout from "./BaseLayout.astro";

const { title, image } = Astro.props;
---

<BaseLayout {title} {image}>
  <article class="NOmarkdown-body">
    <slot />
  </article>
</BaseLayout>

<style>
  article {
    max-width: 72ch;
    margin: 0 auto;
  }
</style>
