---
import "../styles/gh-markdown.css";
import BaseLayout from "./BaseLayout.astro";

import ProjectHeader from "../components/ProjectHeader.astro";

const { title, categories, year, image } = Astro.props;
---

<BaseLayout {title}>
  <ProjectHeader {title} {categories} {year} {image} />
  <article class="markdown-body">
    <slot />
  </article>
</BaseLayout>

<style>
  article {
    max-width: 72ch;
    margin: 0 auto;
  }
</style>
